{
    "env": {
        "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": 1
    },
    "cleanupPeriodDays": 7,
    "permissions": {
        "disableBypassPermissionsMode": "disable",
        "deny": [
            "Read(**/.env)",
            "Read(**/.env.*)",
            "Read(**/*.key)",
            "Read(**/node_modules/**)",
            "Bash(sudo:*)",
            "Bash(su:*)",
            "Bash(curl:*)",
            "Bash(wget:*)",
            "Bash(ssh:*)",
            "Bash(rm:*)"
        ]
    }
}